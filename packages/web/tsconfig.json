{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2022", "dom"],
    "jsx": "react-jsx",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["dist", "*.d.ts", "node_modules"]
}
